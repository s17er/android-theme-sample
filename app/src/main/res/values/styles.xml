<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="MyAppTheme.Light" parent="MyAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_light</item>
        <item name="colorAccent">@color/colorAccent_light</item>

        <item name="appBg">@color/appBg_light</item>
        <item name="titleColor">@color/titleColor_light</item>
        <item name="titleBg">@color/titleBgColor_light</item>
        <item name="contentColor">@color/contentColor_light</item>
        <item name="contentBg">@color/contentBgColor_light</item>
    </style>

    <style name="MyAppTheme.Dark" parent="MyAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent_dark</item>

        <item name="appBg">@color/appBg_dark</item>
        <item name="titleColor">@color/titleColor_dark</item>
        <item name="titleBg">@color/titleBgColor_dark</item>
        <item name="contentColor">@color/contentColor_dark</item>
        <item name="contentBg">@color/contentBgColor_dark</item>
    </style>

</resources>
